ion-modal-view
    ion-header-bar
        h1.title {{'ui.t.user.login.title'|trans}}
        .buttons
            button.button.button-clear(ng-click='closeLogin()')
                | {{'ui.t.user.login.close'|trans}}

    ion-content
        form(ng-submit='doLogin()')
            .list
                label.item.item-input
                    span.input-label {{'ui.t.user.login.username'|trans}}
                    input(type='text', ng-model='loginData.username')
                label.item.item-input
                    span.input-label {{'ui.t.user.login.password'|trans}}
                    input(type='password', ng-model='loginData.password')
                label.item
                    button.button.button-block.button-positive(type='submit')
                     | {{'ui.t.user.login.button'|trans}}

        a.forgotpass(
            ui-sref='app.request-password',
            ng-click='closeLogin()'
        ) {{'ui.t.user.login.forgot'|trans}}

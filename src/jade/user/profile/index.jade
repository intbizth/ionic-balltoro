ion-view(view-title='{{"ui.t.user.profile.title"|trans}}')
    ion-content
        .ranking-item
            .desc
                .title {{'ui.t.user.game-prediction'|trans}}
                .ranking {{'ui.t.user.ranking'|trans}}
            .time 0
            .point {{'ui.t.user.pts'|trans}}
                span.result 0

        .ranking-item.item-blue
            .desc
                .title {{'ui.t.user.game-prediction'|trans}}
                .ranking {{'ui.t.user.ranking'|trans}}
            .time 0
            .point {{'ui.t.user.pts'|trans}}
                span.result 0

        .ranking-item
            .desc
                .title {{'ui.t.user.game-prediction'|trans}}
                .ranking {{'ui.t.user.ranking'|trans}}
            .time 0
            .point {{'ui.t.user.pts'|trans}}
                span.result 0

        .summary-point
            .section
                .point 100
                p point

            .section.-blue
                .coin 0
                p total

        .game-setting
            .user-info
                .avatar
                .username AAAISMAUSER
                .fullname AAA ISMYUSER
            .team-choosen
                .header {{'ui.t.user.team-fav'|trans}}
                .logo

        .profile-edit
            a.button.button-block(ui-sref='app.profile-edit')
                | {{'ui.t.user.profile.edit'|trans}}

    ion-infinite-scroll(
            ng-if="store.hasMorePage()"
            on-infinite="store.getNextPage()"
            distance="5%"
            spinner="{{$spinnerIcon}}"
        )

.expand-collapse.away-collapse
    .header(
        ng-click!="active2 = !active2",
        ng-class!="{'collapsed': active2, 'expanded': !active2}"
    )
        .caret
        | {{r.away_club.name}}
    .slides(ng-hide="active2")
        .content
            .row.titles
                .col {{"ui.t.match.statistic.pos"|trans}}
                .col(flex=25) {{"ui.t.match.statistic.date"|trans}}
                .col(flex=45)
                .col {{"ui.t.match.statistic.ft"|trans}}
        .div(ng-repeat="w in r")
            .row(ng-class-odd!="'odd'", ng-class-even!="'even'")
                .col ww
                .col(flex=25) ww
                .col(flex=45) ww
                .col ww

ion-view(view-title="{{'ui.t.match.header.title'|trans}}")
    ion-content
        // current day
        .match-header(layout="row")
            .col
                button.prev(type="button") {{"10/01/10"}}
            .col.col-30.date {{store.$collection[0].match_day|date:('dd/MM/yyyy')}}
            .col
                button.next(type="button") {{"30/10/10"}}

        ion-item.match-item(collection-repeat="item in matches")
            .league-header
                .logo
                .league {{item.season.name}}

            ion-item.match-item(ng-repeat="r in item.items")
                a(ui-sref="app.matches-show.game-prediction({ id:r.id })")
                    .club
                        img.logo(ng-src!="{{r.home_club.getLogo('70x70')}}")
                        span.name {{r.home_club.name}}

                    .vs.-live(ng-if="r.is_live")
                        | {{r.result}}
                        //TODO: time must be time stamp of live
                        .time {{r.start_time|date:('HH:MM')}}

                    .vs.-fulltime(ng-if="r.is_full_time")
                        | {{r.result}}
                        .ft FT

                    .vs.-nextmatch(ng-if="!r.is_full_time && !r.is_live")
                        | {{r.start_time|date:('HH:MM')}}

                    .club
                        span.name {{r.away_club.name}}
                        img.logo.-right(ng-src!="{{r.away_club.getLogo('70x70')}}")

        ion-infinite-scroll(
            ng-if="store.hasMorePage()"
            on-infinite="store.getNextPage()"
            distance="5%"
            spinner="{{$spinnerIcon}}"
        )

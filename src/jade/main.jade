ion-side-menus(enable-menu-with-back-views='false')
    ion-side-menu-content
        ion-nav-bar.bar-header
            ion-nav-back-button.buttons
            ion-nav-buttons(side='left')
                button.button.button-icon.buttons.ion-navicon(menu-toggle='left')

        // content section
        ion-nav-view(name="content")

    ion-side-menu(side="left" expose-aside-when="large")
        ion-header-bar.bar-stable(ng-show="IsLoggedIn")
            h1.title Left {{IsLoggedIn}}

        ion-content
            ion-list.list-menu
                ion-item(menu-close='', href='#/app/index')
                    | HOME FEED
                ion-item(menu-close='', href='#/app/news')
                    | NEWS
                ion-item(menu-close='', href='#/app/matches')
                    | MATCHES
                ion-item.expand-collapse.menu-collapse
                    .main(ng-click!="active = !active", ng-class!="{'collapsed': active, 'expanded': !active}")
                        | LEAGUES
                        .caret
                    .slides
                        .sub(ng-hide="active", ng-repeat="menu in menus.leagues", menu-close='', href='#/app/matches')
                            | {{menu.text}}
                ion-item(menu-close='', href='#')
                    | PEOPLE RANKING
                ion-item(menu-close='', ng-click='login()')
                    | LOG IN
                ion-item(menu-close='', href='#/app/register')
                    | SIGN IN
            ion-list.list-menu(ng-show="IsLoggedIn")
                ion-item.expand-collapse.menu-collapse
                    .main(ng-click!="active1 = !active1", ng-class!="{'collapsed': active1, 'expanded': !active1}")
                        | SETTING
                        .caret
                    .slides
                        .sub(ng-hide="active1", ng-repeat="menu in menus.setting", menu-close='', href='#/app/matches')
                            | {{menu.text}}
                ion-item(menu-close='', href='#')
                    | MORE
                ion-item(menu-close='', ng-click="")
                    | LOG OUT

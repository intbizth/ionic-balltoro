ion-view(view-title="{{r.headline}}")
    ion-content
        .news-show
            img.cover(ng-src="{{r.cover}}")
            .info
                img.columnist(ng-src="{{r.user.profile_picture}}")
                p.author {{r.user.username}}
                .date.-clearfix {{r.published_date | date:'dd-MM-yyyy'}}
                a(href='r.credit_url') {{r.credit_url}}
                h3.headline {{r.headline}}
                .content
                    .subhead {{r.subhead}}
                    .desc {{r.description}}
                    .highlight
                        div {{r.highlight}}
                    .detail {{r.content}}

        include ../common/share
        include ../common/footer
